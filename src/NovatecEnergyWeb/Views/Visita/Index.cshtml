                        <label class="control-label labelsFormNav">Localidade</label>
                        <div class="controls">
                            <input id="localidadeinput" class="alturaFormNavInput form-control fontTableBodyNavBar" type="text" />
                        </div>
                    </div>

                    <!--fim de localidade input -->

                    <!--bairro input -->
                    <div class="control-group">
