@using NovatecEnergyWeb.Models;

@model NovatecEnergyWeb.Models.ClientesWeb
@{
    ViewData["Title"] = "Clientes";
}

<h2>Cadastro de Cliente</h2>
<div class="row">
    <div class="col-md-8">
        <section>

            <form asp-controller="ClientesWeb" asp-action="Create" method="post" class="form-horizontal" >
                @Html.AntiForgeryToken()

                <br />
                <label class="col-md-2 control-label">Nome Completo</label>
                <div class="col-md-10">
                    <input id="log" type="text" name="NomeCompleto" style="text-transform:uppercase" value="@ViewBag.ClientesWeb.NomeCompleto" class="form-control" />
                    @Html.ValidationMessage("NomeCompleto", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-2 control-label">Login</label>
                <div class="col-md-10">
                    <input id="log" type="text" name="Login" style="text-transform:uppercase" value="@ViewBag.ClientesWeb.Login" class="form-control" />
                    @Html.ValidationMessage("Login", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-2 control-label">Senha</label>
                <div class="col-md-10">
                    <input id="log"  type="password"  name="Senha" value="@ViewBag.ClientesWeb.Senha" class="form-control" />
                    @Html.ValidationMessage("Senha", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-2 control-label">Confirmar Senha</label>
                <div class="col-md-10">
                    <input id="log"  type="password" name="ConfirmaSenha" value="@ViewBag.ClientesWeb.ConfirmaSenha" class="form-control" />
                    @Html.ValidationMessage("ConfirmaSenha", new { @class = "text-danger" })
                    <br />
                </div>

                <label class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="submit" onclick="clickSubmit()" value="OK" class="btn btn-default" />
                </div>

            </form>



        </section>
    </div>
</div>
