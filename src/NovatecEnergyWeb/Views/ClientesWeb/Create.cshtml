@using NovatecEnergyWeb.Models;

@model NovatecEnergyWeb.Models.ClientesWeb
@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<h2>Cadastro de Cliente</h2>
<div class="row">
    <div class="col-md-8">
        <section>

            <form asp-controller="ClientesWeb" asp-action="Create" method="post" class="form-horizontal" >
                @Html.AntiForgeryToken()

                <br />
                <label class="col-md-3 control-label">Nome Completo</label>
                <div class="col-md-9">
                    <input id="nomeCom" type="text" name="NomeCompleto" style="text-transform:uppercase" value="@ViewBag.ClientesWeb.NomeCompleto"  class="form-control" />
                    @Html.ValidationMessage("NomeCompleto", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-3 control-label">E-mail</label>
                <div class="col-md-9">
                    <input type="text" name="Email"  value="@ViewBag.ClientesWeb.Email" class="form-control" />
                    @Html.ValidationMessage("Email", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-3 control-label">Login</label>
                <div class="col-md-9">
                    <input id="log" type="text" name="Login" style="text-transform:uppercase" size="280" value="@ViewBag.ClientesWeb.Login" class="form-control forms-inputs" />
                    @Html.ValidationMessage("Login", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-3 control-label">Senha</label>
                <div class="col-md-9">
                    <input id="pass"  type="password"  name="Senha"  class="form-control forms-inputs" />
                    @Html.ValidationMessage("Senha", new { @class = "text-danger" })
                    <br />
                </div>

                <br /><br /><label class="col-md-3 control-label">Confirmar Senha</label>
                <div class="col-md-9">
                    <input id="pass2"  type="password" name="ConfirmaSenha" class="form-control forms-inputs" />
                    @Html.ValidationMessage("ConfirmaSenha", new { @class = "text-danger" })
                    <br />
                </div>

                <label class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input type="submit" onclick="clickSubmit()" value="OK" class="btn btn-default" />
                </div>

            </form>



        </section>
    </div>
</div>
<script type="text/javascript">
  
    function upperLogin() {
        $('#nomeCom').val($('#nomeCom').val().toUpperCase());
        $('#log').val($('#log').val().toUpperCase());
    };

    function clickSubmit() {
        upperLogin();
    };

</script>