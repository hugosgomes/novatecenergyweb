@model IEnumerable<NovatecEnergyWeb.Models.Funcionários>
@{
    ViewData["Title"] = "Login";
}

<h2>Informe seu Login e Senha</h2>

    <div class="row">
        <div class="col-md-8">
            <section>

                <form asp-controller="Login" asp-action="Login" method="post" class="form-horizontal">
                    <div class="col-md-12">
                        <label class="radio-inline">
                            <input type="radio" name="tipoUsu" checked value="func" onclick="trocaUser(this)">Funcionários
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="tipoUsu" value="cli" onclick="trocaUser(this)">Clientes
                        </label>
                        <br />
                    </div>

       
                   
                    <br /><br /><label class="col-md-2 control-label">Usuário</label>
                    <div class="col-md-10">
                       <select id="usuarios" class="form-control">
                           <option></option>   
                        @foreach (var item in Model)
                        {
                            <option>@Html.DisplayFor(m => item.Login)</option>
                        }
                          
                        
                        </select> <br />
                    </div>

                    <label  class="col-md-2 control-label">Senha</label>
                    <div class="col-md-10">
                        <input type="password" name="usuario.Senha" class="form-control" /> <br />
                    </div>

                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input type="submit" value="OK" class="btn btn-default" />
                    </div>
               
                </form>
            </section>
        </div>
   </div>

<script type="text/javascript">

    function trocaUser(radio) {
        $.post("@Url.Action("TrocaTipoUsuario", "Login")", radio.value, atualizaDrop);
    };
    
    function atualizaDrop(lista) {

        $("#usuarios").empty();
        
    };
</script>
