@model IEnumerable<NovatecEnergyWeb.Models.Funcionários>
@{
    ViewData["Title"] = "Login";
}

<h2>Informe seu Login e Senha</h2>

    <div class="row">
        <div class="col-md-8">
            <section>

                <form asp-controller="Login" asp-action="Login" method="post" class="form-horizontal">
                    <div class="col-md-12">
                        <label class="radio-inline">
                            <input type="radio" name="tipoUsu" id="radio_func" checked value="func" onclick="trocaUser()">Funcionários
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="tipoUsu" id="radio_cli" value="cli" onclick="trocaUser()">Clientes
                        </label>
                        <br />
                    </div>

       
                   
                    <br /><br /><label class="col-md-2 control-label">Usuário</label>
                    <div class="col-md-10">
                       <select id="usuarios" class="form-control">
                           <option></option>   
                        @foreach (var item in Model)
                        {
                            <option>@Html.DisplayFor(m => item.Login)</option>
                        }
                          
                        
                        </select> <br />
                    </div>

                    <label  class="col-md-2 control-label">Senha</label>
                    <div class="col-md-10">
                        <input type="password" name="usuario.Senha" class="form-control" /> <br />
                    </div>

                    <label class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input type="submit" value="OK" class="btn btn-default" />
                    </div>
               
                </form>
            </section>
        </div>
   </div>

<script type="text/javascript">

    function trocaUser() {
        var parametros = {};

        if (document.getElementById('radio_func').checked) {
            parametros.control = 'func';
        } else if (document.getElementById('radio_cli').checked) {
            parametros.control = 'cli';

        }
        $.post("@Url.Action("TrocaTipoUsuario", "Login")", parametros, atualizaDrop);
    };

    function atualizaDrop(list) {

        $("#usuarios").empty();
        $("#usuarios").append($("<option />").val('').text(''));

        $.each(list, function () {
            $("#usuarios").append($("<option />").val(this.id).text(this.login));
        });

    };
</script>
