                            <td class="col-sm-8">Entrevistas Realizadas</td>
                            <td id="e10" class="col-sm-2 text-right">@ViewBag.Entrevistas</td>
                            <td id="ep7" class="col-sm-2 text-right">@ViewBag.EntrevistasPercent%</td>
