@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NovatecEnergyWeb</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <link href="~/logo-61x64.ico" rel="shortcut icon" type="image/x-icon" />

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">NovatecEnergyWeb</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  <!--  <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">Sobre</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contato</a></li>-->
                    @{
                        object us = Context.Session.GetInt32("UserId");
                        if (us != null)
                        {
                             <li><a asp-area="" asp-controller="ClientesWeb" asp-action="Index">Ativação de clientes</a></li>

                        }
                       
                     }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        @{
                            object user = Context.Session.GetInt32("UserId");
                            if (user != null)
                            {
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-user"></span> Olá, @Context.Session.GetString("Login") <span class="caret"></span> </a>
                            }
                            else
                            {
                                <a asp-controller="ClientesWeb" asp-action="Create"><span class="glyphicon glyphicon-log-in"></span> Cadastre-se</a>
                            }
                        }
                        

                        <ul class="dropdown-menu">
                            @{
                                object a = Context.Session.GetInt32("UserId");
                                if (a != null)
                                {
<!--                                    <li><a  href="#">Olá, @Context.Session.GetString("Login")</a></li>-->
                                    <li><a asp-area="" asp-controller="Account" asp-action="TrocaSenha">Trocar Senha</a></li>
                                    <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                }
                            }

                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </div>
    <div id="container1"class="container body-content">
        @{ 
            if (TempData["mensagem"]!=null)
            {
                @Html.Partial("_BootstrapAlert", TempData["mensagem"] as string);
                
            }
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year.ToString() Novatec Energy. Todos os Direitos Reservados.</p>
            
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/encrypto.js"asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/encrypto.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>

</html>
